@model List<ResultYummyEventDto>

@{
    ViewData["Title"] = "YummyEventList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Etkinlik Organizasyon Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        @* <td>@(item.Status == StatusType.Aktif ? "Aktif" : "Pasif")</td> *@
                                        <td>@item.Status.ToString()</td>
                                        <td>@(item.Description.Length > 90 ? item.Description.Substring(0, 90) + "..." : item.Description)</td>
                                        <td>@item.Price ₺</td>
                                        <td><a href="/YummyEvent/DeleteYummyEvent/@item.YummyEventId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                        <td><a href="/YummyEvent/UpdateYummyEvent/@item.YummyEventId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end mt-4 none-border">
                            <a href="/YummyEvent/CreateYummyEvent/" class="btn btn-outline-primary btn-rounded mr-2">Yeni Organizasyon Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>