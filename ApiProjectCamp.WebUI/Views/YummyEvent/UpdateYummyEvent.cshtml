@using ApiProjectCamp.Shared.Enums
@model UpdateYummyEventDto

@{
    ViewData["Title"] = "UpdateYummyEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Etkinlik Organizasyon Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="YummyEventId" />
                            <label>Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" />
                            <label>Durum</label>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusType>()" class="form-control">
                                <option value="">Seçiniz</option>
                            </select>
                            <label>Görsel URL</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" />
                            <label>Fiyat</label>
                            <input type="number" class="form-control" asp-for="Price" />
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success mr-3 btn-rounded">Güncelle</button>
                                <a href="/YummyEvent/YummyEventList/" class="btn btn-outline-danger btn-rounded mr-2">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>