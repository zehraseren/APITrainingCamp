@model List<ResultContactDto>

@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>İletişim Bilgileri</h4>
                    </div>
                    <div class="card-header">
                        <em>Sadece 1 tane iletişim bilgisi olmalıdır.</em>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Harita Konumu</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Mail Adresi</th>
                                    <th scope="col">Telefon Numarası</th>
                                    <th scope="col">Açık Saatler</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(item.MapLocation.Length > 40 ? item.MapLocation.Substring(0, 40) + "..." : item.MapLocation)</td>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.OpenHours</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end mt-4 none-border">
                            @if (Model.Count == 1)
                            {
                                <a href="#" class="btn btn-outline-primary btn-rounded mr-2" onclick="return false;">İletişim Bilgisi Mevcut</a>
                            }
                            else
                            {
                                <a href="/Contact/CreateContact/" class="btn btn-outline-primary btn-rounded mr-2">Yeni İletişim Bilgisi Girişi</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
