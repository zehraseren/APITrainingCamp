@model UpdateReservationDto

@{
    ViewData["Title"] = "UpdateReservation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Etkinlik Organizasyon Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ReservationId" />
                            <label>Ad Soyad</label>
                            <input type="text" class="form-control" asp-for="NameSurname" />
                            <label>Telefon Numarası</label>
                            <input type="tel" class="form-control" asp-for="PhoneNumber" />
                            <label>Email Adresi</label>
                            <input type="email" class="form-control" asp-for="Email" />
                            <label>Tarih</label>
                            <input type="date" class="form-control" asp-for="ReservationDate" />
                            <label>Saat</label>
                            <input type="time" class="form-control" asp-for="ReservationHour" />
                            <label>Kişi Sayısı</label>
                            <input type="number" class="form-control" asp-for="PersonCount" />
                            <label>Durum</label>
                            <input type="text" class="form-control" asp-for="ReservationStatus" readonly />
                            <label>Mesaj</label>
                            <textarea class="form-control" rows="5" asp-for="Message"></textarea>
                            <div class="d-flex justify-content-end mt-4 none-border">
                                <button type="submit" class="btn btn-outline-success mr-3 btn-rounded">Güncelle</button>
                                <a href="/Reservation/ReservationList/" class="btn btn-outline-danger btn-rounded mr-2">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>